<table>
  <thead>
    <tr>
      <th style="width: 130px;">予約番号</th>
      <th style="width: 150px;">宿泊者名</th>
      <th style="width: 50px;">室名</th>
      <th style="width: 130px;">チェックイン日</th>
      <th style="width: 140px;">チェックアウト日</th>
      <th style="width: 90px;">ステータス</th>
      <th>予約編集</th>
    </tr>
  </thead>
  <tbody>
    <% reservations.each do |reserve| %>
    <tr>
      <td><%= reserve.reserve_no %></td>
      <td><%= reserve.guest_name %></td>
      <td><%= Room.find(reserve.room_id).room_name %></td>
      <td class="rsrv_in_date"><%= reserve.check_in_date %></td>
      <td><%= reserve.check_out_date %></td>
      <td><%= reserve.status_i18n %></td>
      <td>
        <% if reserve.apply? %>
          <%= button_to "承認", approve_admin_reservation_path(reserve.id), method: :patch %>
          <%= button_to "非承認", refuse_admin_reservation_path(reserve.id), method: :patch %>
        <% end %>
        <% if reserve.approve? %>
          <%= button_to "受付", arrive_admin_reservation_path(reserve.id), method: :patch %>
          <%= button_to "キャンセル", cancel_admin_reservation_path(reserve.id), method: :patch %>
        <% end %>
        <% if reserve.arrive? %>
          <%= button_to "退去・支払", leave_admin_reservation_path(reserve.id), method: :patch %>
        <% end %>
        <%= link_to "詳細", admin_reservation_path(reserve.id), method: :get %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
