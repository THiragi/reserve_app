<% provide(:title, @room.room_name) %>
<% today = Date.today %>
<input type="hidden" id="room-id" data-room-id="<%= @room.id %>"/>
<h2><%= @room.room_name %> -<%= @room_type.type_name %>- の予約状況</h2>
<div class="content">

  <div id="calendar-area">
    <%= render partial: 'calendar', locals: {start: @start, room_type: @room_type}%>
  </div>

<div class="check_form">
  <div class="date_form">
    <label for="checkin">チェックイン日：</label>
    <input type="date" name="checkin[]" id="checkin" min="<%= today %>" max="<%= today.years_since(3) %>"/>
    <label for="checkout">チェックアウト日：</label>
    <input type="date" name="checkout[]" id="checkout"/>
    <label for="guest_count">人数：</label>
    <input type="number" name="guestcount[]" id="guest_count" min="1" max="<%= @room_type.capacity %>" style="width: 28px;"/><span>人</span>
  </div>
  <input type="button" id="calc" class="btn" value="料金を計算する"/>

  <div id="total">
  </div>
</div>
