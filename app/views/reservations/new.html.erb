<% provide(:title) %>

<h2>宿泊予約申請フォーム</h2>
<% letters = ('a'..'z').to_a %>
<% l = letters.sample(4).join %>
<% n = sprintf('%08d', Reservation.count + 1) %>

<%= form_for @reservation do |f| %>
  <%= f.hidden_field :reserve_no, value: l + n %>
      <%= render 'stay_form', f: f %>
    <div class="form_list">
      <%= render 'guest_form', f: f %>
      <div class="btn_bars">
        <input type="button" class="btn btn-default" value="確認する" id="sendConfirm"/>
      </div>
    </div>

    <div class="confirm_list" style="display: none">
      <%= render 'confirm' %>
      <div class="btn_bars">
        <%= f.submit "予約を申請する", class:"btn btn-success" %>
        <input type="button" class="btn btn-primary" value="変更する" id="editConfirm"/>
      </div>
    </div>
<% end %>
